{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "typeRoots": [
    "@types",
    "./node_modules/@types",
  ],
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}